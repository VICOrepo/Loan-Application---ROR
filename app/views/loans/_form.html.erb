<h1 class="actions">Loan Application Form</h1>

<%= form_with model: @loan do |form| %> <% if @loan.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@loan.errors.count, "error") %> prohibited this loan
    application from being saved:
  </h2>
  <ul>
    <% @loan.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="center-container">
  <div class="container">
    <div class="item">
      <div class="field">
        <%= form.label :name %> <%= form.text_field :name %>
      </div>
  
      <div class="field">
        <%= form.label :email %> <%= form.email_field :email %>
      </div>
  
      <div class="field">
        <%= form.label :amount %> <%= form.number_field :amount %>
      </div>
    </div>
  
    <div class="item1">
      <div class="field">
        <%= form.label :purpose %> <%= form.text_area :purpose %>
      </div>
      <!-- New Fields -->
      <div class="field">
        <%= form.label :ssn, style: "text-transform: uppercase;" %> <%= form.text_field :ssn, placeholder:
        "XXX-XX-XXXX" %>
      </div>
  
      <div class="field">
        <%= form.label :phone_number %> <%= form.text_field :phone_number%>
      </div>
    </div>
  
    <div class="item2">
      <div class="field">
        <%= form.label :address %> <%= form.text_area :address %>
      </div>
  
      <div class="field">
        <%= form.label :income %> <%= form.number_field :income, step: 0.01,
        placeholder: "Enter your monthly income" %>
      </div>
  
      <div class="field">
        <%= form.label :profession %> <%= form.text_field :profession %>
      </div>
    </div>
  </div>

</div>

<div class="actions"><%= form.submit "Submit" %></div>

<% end %>
